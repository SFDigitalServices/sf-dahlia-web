.form-address.row.expand
  .form-group-street.form-item.large-12.columns ng-class="{ error: $ctrl.inputInvalid('address1') }"
    label.sr-only for="{{$ctrl.modelName}}_{{$ctrl.addressType}}_address1" translate="LABEL.ADDRESS_1"
    input(id="{{$ctrl.modelName}}_{{$ctrl.addressType}}_address1" ng-model="$ctrl.model[$ctrl.addressType].address1"
      ng-change="$ctrl.onChange()" name="{{$ctrl.addressType}}_address1" placeholder="{{'LABEL.ADDRESS_1' | translate}}" type="text"
      ng-required="{{$ctrl.isRequired}}" ng-class="{ error: $ctrl.inputInvalid('address1') }"
      aria-describedby="{{$ctrl.modelName}}_{{$ctrl.addressType}}_address1_error" ng-pattern="$ctrl.latinRegex" input-error translated-error="ERROR.ADDRESS")

  .form-group-apt.large-12.column
    label for="{{$ctrl.modelName}}_{{$ctrl.addressType}}_address2" translate="LABEL.ADDRESS_2"
    input(id="{{$ctrl.modelName}}_{{$ctrl.addressType}}_address2" ng-model="$ctrl.model[$ctrl.addressType].address2"
      ng-change="$ctrl.onChange()" name="{{$ctrl.addressType}}_address2" placeholder="{{'LABEL.ADDRESS_2' | translate}} " type="text")
  .form-group-city.form-item.small-7.columns ng-class="{ error: $ctrl.inputInvalid('city') }"
    label for="{{$ctrl.modelName}}_{{$ctrl.addressType}}_city" translate="LABEL.CITY"
    input(id="{{$ctrl.modelName}}_{{$ctrl.addressType}}_city" ng-model="$ctrl.model[$ctrl.addressType].city"
      ng-change="$ctrl.onChange()" name="{{$ctrl.addressType}}_city" placeholder="{{'LABEL.CITY' | translate}}" type="text"
      ng-required="{{$ctrl.isRequired}}" ng-class="{ error: $ctrl.inputInvalid('city') }"
      aria-describedby="{{$ctrl.modelName}}_{{$ctrl.addressType}}_city_error")
    small.error id="{{$ctrl.modelName}}_{{$ctrl.addressType}}_city_error" ng-show="$ctrl.inputInvalid('city')" translate="ERROR.CITY"

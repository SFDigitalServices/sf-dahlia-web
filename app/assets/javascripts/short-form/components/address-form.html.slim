    input(id="{{$ctrl.modelName}}_{{$ctrl.addressType}}_zip" ng-model="$ctrl.model[$ctrl.addressType].zip"
      ng-change="$ctrl.onChange()" name="{{$ctrl.addressType}}_zip" placeholder="{{'LABEL.ZIPCODE' | translate}}" type="text" ui-mask="{{$ctrl.model[$ctrl.addressType].zip.length > 5 ? '99999-9999' : '99999'}}" ui-mask-placeholder

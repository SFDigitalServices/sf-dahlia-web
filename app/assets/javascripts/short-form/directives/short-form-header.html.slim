/ all directives require an outermost div, shouldn't affect the layout at all
div
  header.app-inner.leader ng-class="hasBorderBottom()"
    / back button
    short-form-back

    / stuff inside the header e.g. "h2" titles get inserted in the transclude
    ng-transclude ng-if="!featuredLeader"

  .leader-header.featured-leader.border-bottom ng-if="featuredLeader"
    ng-transclude

  #short-form-alerts
    alert-box(short-form="true" preference-warning="preferenceWarning()" address-error="addressError" custom-message="customInvalidMessage")

    alert-box(primary="true" hide-alert="hideMessage" info="true" custom-message="loggedInMessage" ng-if="loggedIn() && loggedInMessage")

    / this is if your household is not eligible (e.g. income, household size, senior community qualification)
    alert-box(custom-message="notEligibleErrorMessage" eligibility-errors="eligibilityErrors" custom-educator-listing="isCustomEducatorListing()" hide-alert="hideAlert" ng-if="eligibilityErrors.length" invert="true")

.form-group
  label.form-label.caps id="veteran_form_label" for="user_veteran"
    | {{'label.applicant_veteran' | translate}}

  .form-group
    .radio-group.padding-top--half role="radiogroup" aria-labelledby="question-title"
      radio-block-item value='Yes' user='applicant' name='isVeteran' ng-required='false'
        | {{'t.yes' | translate}}
      radio-block-item value='No' user='applicant' name='isVeteran' ng-required='false'
        | {{'t.no' | translate}}

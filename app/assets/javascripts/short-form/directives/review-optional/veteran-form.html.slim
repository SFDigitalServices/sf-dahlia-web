      radio-block-item value='Yes' user='application' name='isNonPrimaryMemberVeteran' ng-required='false'
        | {{'t.yes' | translate}}
      radio-block-item value='No' user='application' name='isNonPrimaryMemberVeteran' ng-required='false'
        | {{'t.no' | translate}}
      radio-block-item value='Decline to state' user='application' name='isNonPrimaryMemberVeteran' ng-required='false'
        | {{'t.prefer_not_to_answer' | translate}}
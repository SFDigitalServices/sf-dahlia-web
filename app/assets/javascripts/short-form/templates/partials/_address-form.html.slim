.form-address.row
  .form-group-street.form-item.large-12.columns ng-class="{ error: isRequired() && inputInvalid('address1', addressType) }"
    label.sr-only for="{{model}}_{{addressType}}_address1" translate="LABEL.ADDRESS_1"
    input(id="{{model}}_{{addressType}}_address1" ng-model="this[model][addressType].address1"
      ng-change="checkIfMailingAddressNeeded()" name="{{addressType}}_address1" placeholder="{{'LABEL.ADDRESS_1' | translate}}" type="text"
      ng-required="isRequired()" ng-class="{ error: isRequired() && inputInvalid('address1', addressType) }")
    small.error ng-show="isRequired() && inputInvalid('address1', addressType)"
      | {{'ERROR.ADDRESS' | translate}}

  .form-group-apt.large-12.column
    label for="{{model}}_{{addressType}}_address2" translate="LABEL.ADDRESS_2"
    input(id="{{model}}_{{addressType}}_address2" ng-model="this[model][addressType].address2"
      ng-change="checkIfMailingAddressNeeded()" name="{{addressType}}_address2" placeholder="{{'LABEL.ADDRESS_2' | translate}} " type="text")
  .form-group-city.form-item.small-7.large-5.columns ng-class="{ error: isRequired() && inputInvalid('city', addressType) }"
    label for="{{model}}_{{addressType}}_city" translate="LABEL.CITY"
    input(id="{{model}}_{{addressType}}_city" ng-model="this[model][addressType].city"
      ng-change="checkIfMailingAddressNeeded()" name="{{addressType}}_city" placeholder="{{'LABEL.CITY' | translate}}" type="text"
      ng-required="isRequired()" ng-class="{ error: isRequired() && inputInvalid('city', addressType) }")
    small.error ng-show="isRequired() && inputInvalid('city', addressType)"
      | {{'ERROR.CITY' | translate}}
  .form-group-state.form-item.small-5.large-3.columns ng-class="{ error: isRequired() && inputInvalid('state', addressType) }"
    label for="{{model}}_{{addressType}}_state" State

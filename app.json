{
  "name":"sf-dahlia-web",
  "description":"",
  "stack": "heroku-22",
  "scripts":{
    "postdeploy": "rake db:setup && rake db:migrate && rake listing_images:process_images"
  },
  "addons":[
    "newrelic",
    "papertrail",
    "memcachier",
    "sendgrid",
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-nodejs"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-ruby"
    },
    {
      "url": "https://github.com/bobbus/image-optim-buildpack"
    }
  ],
  "environments": {
    "review": {
      "addons": [
        "newrelic",
        "papertrail",
        "memcachier",
        "heroku-postgresql"
      ],
      "scripts": {
        "postdeploy": "rake db:migrate && rake preload:user"
      }
    }
  },
  "env":{
    "LANG":{
      "required":true
    },
    "RACK_ENV":{
      "required":true
    },
    "RAILS_ENV":{
      "required":true
    },
    "RAILS_SERVE_STATIC_FILES":{
      "required":true
    },
    "SECRET_KEY_BASE":{
      "required":true
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "HEROKU_PARENT_APP_NAME": {
      "required": true
    },
    "SALESFORCE_USERNAME":{
      "required":true
    },
    "SALESFORCE_PASSWORD":{
      "required":true
    },
    "SALESFORCE_SECURITY_TOKEN":{
      "required":true
    },
    "SALESFORCE_CLIENT_SECRET":{
      "required":true
    },
    "SALESFORCE_CLIENT_ID":{
      "required":true
    },
    "SALESFORCE_HOST":{
      "required":true
    },
    "SALESFORCE_INSTANCE_URL":{
      "required":true
    },
    "EASYPOST_API_KEY":{
      "required":true
    },
    "DISALLOW_ALL_WEB_CRAWLERS":{
      "required":true
    },
    "RESOURCE_URL":{
      "required":true
    },
    "S3_BUCKET":{
      "required":true
    },
    "S3_ACCESS_KEY":{
      "required":true
    },
    "S3_ACCESS_KEY_ID":{
      "required":true
    },
    "ADVERTISE_DALP": {
      "required": false
    },
    "DALP_PROGRAM_INFO": {
      "required": false
    },
    "COVID_UPDATE": {
      "required": false
    },
    "MESSAGE_SERVICE_API_KEY": {
      "required": false
    },
    "MESSAGE_SERVICE_URL": {
      "required": false
    },
    "NODE_OPTIONS": {
      "required": false,
      "value": "--openssl-legacy-provider --max_old_space_size=4096"
    }
  }
}
